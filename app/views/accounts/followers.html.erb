<table class="table table-condensed">
  <tr>
    <th colspan="2">Followers</th>
  </tr>
  
  <% @follower_list.each do |f| %>
    <tr>
    <td style="text-align:right"> 
    <% if Account.find(f).avatar.attached? %>
    <%= link_to image_tag(Account.find(f).avatar,:class=>"profile-pic"), profile_path(f) %>
    <%else%>
    <%= link_to image_tag("profile2.jpg",:class=>"profile-pic"), profile_path(f) %>
    <%end%>
    </td>
    <td style="text-align:left;"><%=link_to Account.find(f).username, profile_path(f),:class=>"text-dark" %></td>
  <% end %>
  </tr>
</table>
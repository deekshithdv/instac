<div class="form-upload">
<h2>New post</h2><br/>
<%= form_with model: @post, local: true  do |f| %>
  <div class="form-group">
    <%= f.file_field :image, :style=>'width:50%'%>
  </div>
  <div class="form-group">
    <%= f.text_field :caption, placeholder:"Description here!",:style=>'width:50%' %>
  </div>
  <div class="form-group">
    <%= f.text_field :account_id, value: current_account.id, class:'d-none'%>
  </div>
  <br>
  <div class="text-center">
    <%= f.submit 'Create Post', class: 'btn btn-secondary' %>
  </div>
<% end %>
</div>